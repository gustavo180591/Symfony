{% extends 'base.html.twig' %}

{% block title %}Salida index{% endblock %}

{% block body %}
    <h1>Salida index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Cantidad</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for salida in salidas %}
            <tr>
                <td>{{ salida.id }}</td>
                <td>{{ salida.fecha ? salida.fecha|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ salida.cantidad }}</td>
                <td>
                    <a href="{{ path('app_salida_show', {'id': salida.id}) }}">show</a>
                    <a href="{{ path('app_salida_edit', {'id': salida.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_salida_new') }}">Create new</a>
{% endblock %}
